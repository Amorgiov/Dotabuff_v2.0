<!DOCTYPE html>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
    <head>
        <title>Heroes</title>

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"> <!-- Для иконок -->
    @* <link rel="stylesheet" href="~/css/heroes.css"> *@
        <link rel="stylesheet" href="~/css/site.css" />

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/heroes.js"></script>
    </head>
    <body>
        <div id="hero-image"></div>

        <div class="container mt-4">
            <h1>Heroes</h1>
            <div class="mb-3">
                <input id="hero-search" class="form-control" type="text" placeholder="Search heroes...">
            </div>
            <div class="row">
                @foreach (var hero in Model)
                {
                <div class="col-md-4 hero-card" data-name="@hero.Name">
                    <div class="card bg-secondary text-light mb-3">
                        <a href="https://www.dota2.com/hero/@hero.Name" target="_blank" class="text-decoration-none">
                            <img src="@hero.ImageUrl" class="card-img-top" alt="@hero.Name" />
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="https://www.dota2.com/hero/@hero.Name" target="_blank" class="text-decoration-none text-light">
                                    @hero.Name
                                </a>
                            </h5>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </body>
</html>
