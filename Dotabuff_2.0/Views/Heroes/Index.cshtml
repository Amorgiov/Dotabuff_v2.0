<!DOCTYPE html>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title>Heroes</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"> <!-- Для иконок -->
    @* <link rel="stylesheet" href="~/css/heroes.css"> *@
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/heroes.js"></script>

    <style>
        body {
            background: url('https://cdn.cloudflare.steamstatic.com/apps/dota2/images/dota_react/backgrounds/greyfade.jpg') no-repeat center center fixed;
            background-size: cover;
            color: white;
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        #hero-search {
            max-width: 600px;
            margin: 0 auto 20px;
        }

        .hero-card img {
            transition: transform 0.3s ease, filter 0.3s ease;
            border-radius: 50%;
            width: 100px;
            height: 100px;
            object-fit: cover;
            border: 3px solid rgba(255, 255, 255, 0.5);
        }

        .hero-card:hover img {
            transform: scale(1.2);
            filter: brightness(1.2);
        }

        .hero-card img:not(:hover) {
            filter: brightness(0.8);
        }

        .hero-card .card {
            text-align: center;
            background: rgba(0, 0, 0, 0.6);
            border: none;
            border-radius: 15px;
            padding: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
        }

        .hero-card:hover .card {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.5);
        }

        .hero-card .card-title {
            font-size: 1em;
            font-weight: bold;
            margin-top: 10px;
        }

        .hero-card a {
            text-decoration: none;
            color: white;
        }

        .row {
            justify-content: center;
            gap: 15px;
        }
    </style>
</head>
<body>
    <div id="hero-image"></div>

    <div class="container mt-4">
        <h1>Heroes</h1>
        <div class="mb-3">
            <input id="hero-search" class="form-control" type="text" placeholder="Search heroes...">
        </div>
        <div class="row">
            @foreach (var hero in Model)
            {
                var heroUrlName = hero.Name.Replace(" ", "");
                <div class="col-md-2 col-sm-4 hero-card" data-name="@hero.Name">
                    <a href="https://www.dota2.com/hero/@heroUrlName" class="text-decoration-none">
                        <div class="card text-light mb-3">
                            <img src="@hero.ImageUrl" class="card-img-top" alt="@hero.Name" />
                            <div class="card-body">
                                <h5 class="card-title">@hero.Name</h5>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</body>
</html>
