<!DOCTYPE html>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
    <head>
        <title>Heroes</title>

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <link rel="stylesheet" href="~/css/site.css" />

    </head>
    <body>
        <h2>Admin Panel</h2>

        <div class="admin-actions">
            <h3>Update Data</h3>
            <div class="buttons-container">
                <form asp-action="UpdateHeroes" asp-controller="Admin" method="post" class="update-form">
                    <button type="submit" class="btn btn-primary">Update Heroes</button>
                </form>

                <form asp-action="UpdateItems" method="post" class="update-form">
                    <button type="submit" class="btn btn-success">Update Items</button>
                </form>

                <form asp-action="UpdateAll" method="post" class="update-form">
                    <button type="submit" class="btn btn-danger">Update All</button>
                </form>
            </div>
        </div>

        <link rel="stylesheet" href="~/css/admin.css" />
        <script src="~/js/admin.js"></script>
    </body>
</html>


