<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DotaBuffClone</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
    <link rel="icon" type="image/png" href="~/img/icons8-дота-2-gradient-512.png" />
</head>

<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="~/img/icons8-дота-2-gradient-512.png" alt="Dota 2 Icon" style="width: 30px; height: 30px; margin-right: 10px;">DotaBuff v2.0
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#dotabuff-navbarNav" aria-controls="dotabuff-navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="dotabuff-navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Heroes">Heroes</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Items">Items</a></li>
                    <li class="nav-item">
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="nav-link" href="/Admin">Admin</a>
                        }
                    </li>
                    <li class="nav-item"><a class="nav-link" href="/Matches">Matches</a></li>
                </ul>
                <div class="ms-auto">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </header>

    <main id="main-content" class="container mt-4">
        @RenderBody()
    </main>

    <footer id="main-footer" class="text-center py-3">
        &copy; @DateTime.Now.Year - DotaBuff 2.0 Made by Vi_Persh & Amorgiov
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
